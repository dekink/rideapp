<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bgw">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btncircle"
        android:id="@+id/ivParkIMG"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvParkTitle"
        android:textSize="18dp"
        android:layout_above="@+id/tvParkAddr"
        android:layout_toRightOf="@+id/ivParkIMG"
        android:layout_toEndOf="@+id/ivParkIMG"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvParkAddr"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/ivParkIMG"
        android:layout_alignLeft="@+id/tvParkTitle"
        android:layout_alignStart="@+id/tvParkTitle" />

</RelativeLayout>