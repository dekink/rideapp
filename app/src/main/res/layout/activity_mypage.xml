<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:background="@drawable/btncircle"
            android:id="@+id/imageView5"
            android:layout_weight="0.96"
            android:layout_marginTop="10dp" />

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
            android:weightSum="1">

            <ImageButton
            android:text="camera"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:id="@+id/btnCamera"
            android:layout_above="@+id/ivMyBoard"
            android:layout_toRightOf="@+id/ivMyBoard"
            android:layout_toEndOf="@+id/ivMyBoard"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btngray"
            android:layout_marginTop="58dp"
            android:layout_weight="0.13"
            android:onClick="onClick"
            android:src="@drawable/camera1" />

            <Button
            android:text="alarm"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAlarm"
            android:layout_above="@+id/ivMyBoard"
            android:layout_toRightOf="@+id/ivMyBoard"
            android:layout_toEndOf="@+id/ivMyBoard"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btngray"
            android:textColor="#E5A9C0"
            android:layout_marginTop="5dp"
            android:onClick="onClick" />

    </LinearLayout>


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="209dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lvMemo" />


</RelativeLayout>
