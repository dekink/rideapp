<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/white">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_weight="0.14" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stop1"
        android:layout_alignTop="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnStop"
        android:onClick="onRClick"
        android:elevation="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start1"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/btnStart"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:onClick="onRClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/save1"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:id="@+id/btnSave"
        android:layout_alignTop="@+id/btnStop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onRClick" />
</RelativeLayout>