<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_memo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvParkName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/imageView2"
        android:background="@drawable/bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bar"
        android:layout_below="@+id/etMemoTitle"
        android:layout_alignLeft="@+id/etMemoTitle"
        android:layout_alignStart="@+id/etMemoTitle"
        android:layout_marginTop="38dp"
        android:id="@+id/imageView3" />

    <TextView
        android:text="내용을 입력하세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/tvParkName"
        android:layout_alignStart="@+id/tvParkName"
        android:id="@+id/tvTitle"
        android:textSize="19dp"/>

    <TextView
        android:text="제목을 입력하세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:id="@+id/tvParkName"
        android:textSize="19dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etMemoTitle"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3">

        <EditText
            android:layout_width="267dp"
            android:layout_height="93dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:id="@+id/etMemoContent"
            android:layout_below="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3" />

    </LinearLayout>

    <Button
        android:text="save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:id="@+id/btnSave"
        android:background="@drawable/btncircle"
        android:onClick="onClick" />

</RelativeLayout>